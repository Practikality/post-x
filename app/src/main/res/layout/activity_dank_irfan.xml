<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.esy.practikality.post_x.DankIrfan">
    <TextView
        android:id="@+id/postx_dank_irfan"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="P O S T X"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="36sp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"/>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="310dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/postx_dank_irfan"
        android:id="@+id/irfan_meme_body">
        <ImageView
            android:contentDescription="Irfan meme base image"
            android:id="@+id/irfan_image_view"
            android:background="@drawable/irfan_charlie"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:background="#00000000"
            android:id="@+id/irfan_text_top"
            android:layout_width="320dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="30sp"
            android:cursorVisible="false"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:hint="Enter Text"
            android:textColorHint="#fff"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp" />
        <EditText
            android:cursorVisible="false"
            android:background="#00000000"
            android:visibility="gone"
            android:id="@+id/irfan_text_bottom"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Enter Text"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
        <EditText
            android:cursorVisible="false"
            android:visibility="gone"
            android:background="#00000000"
            android:id="@+id/irfan_myboy_top_text"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:hint="Enter Text"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />
        <EditText
            android:cursorVisible="false"
            android:visibility="gone"
            android:background="#00000000"
            android:id="@+id/irfan_myboy_bottom_text"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:hint="Enter Text"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <Button
        android:layout_centerHorizontal="true"
        android:onClick="change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:text="SWITCH IRFAN IMAGE"
        android:layout_above="@id/share_twitter_post"
        android:background="#42A5F5"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="18sp" />
    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/share_twitter_post"
        android:onClick="share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="@string/share"
        android:background="#0D47A1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp" />
</RelativeLayout>
