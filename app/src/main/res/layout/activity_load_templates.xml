<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2eb1ff"
    tools:context="es.esy.practikality.post_x.LoadTemplates">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/postx_temp_logo"
        android:src="@drawable/postx_complete_logo" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_floating_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="show_template_names"
            app:backgroundTint="#000000"
            app:fabSize="normal"
            app:srcCompat="@drawable/white_plus_icon" />

        <LinearLayout
            android:id="@+id/linlayout_dank_irfan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="170dp"
            android:layout_marginEnd="25dp"
            android:onClick="create_dank_irfan"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/irfanpost"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/dank_irfan"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/irfan_floating_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="create_dank_irfan"
                app:fabSize="mini"
                app:srcCompat="@drawable/white_message_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlayout_text_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="125dp"
            android:layout_marginEnd="25dp"
            android:onClick="create_text_post"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textpost"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp"
                android:text="@string/text_post"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/text_floating_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="create_text_post"
                app:backgroundTint="#000"
                app:fabSize="mini"
                app:srcCompat="@drawable/white_message_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlayout_twitter_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="25dp"
            android:onClick="create_twitter_post"
            android:orientation="horizontal"
            tools:ignore="InvalidId">

            <TextView
                android:id="@+id/twitter_post"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/twitter_post"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/twitter_floating_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="create_twitter_post"
                app:backgroundTint="#000"
                app:fabSize="mini"
                app:srcCompat="@drawable/white_twitter_icon" />
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>


