<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.esy.practikality.postx.TwitterMeme">
    <TextView
        android:id="@+id/postx_twitter_meme_details"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="26sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/postx_twitter_meme_details">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Twitter Username"
            android:textColor="#000000"
            android:textSize="18sp"
            android:focusableInTouchMode="true"
            android:focusable="true"/>

        <EditText
            android:id="@+id/maintext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/transparent"
            android:hint="username"
            android:singleLine="true"
            android:maxLength="15"
            android:inputType="textEmailAddress"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Full Name"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/bottom_right_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/transparent"
            android:hint="Your full name"
            android:maxLength="15"
            android:singleLine="true"
            android:inputType="text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Caption"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/caption_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/transparent"
            android:hint="Caption for the tweet"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Hashtags (seperated by space)"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/hashtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/transparent"
            android:hint="Hashtags (if any)"
            android:inputType="text"
            android:singleLine="false"
            android:textSize="16sp" />
    </LinearLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="#0D47A1"
        android:onClick="generatememe"
        android:text="generate twitter post"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
