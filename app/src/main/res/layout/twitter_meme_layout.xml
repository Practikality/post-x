<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/twitter1"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="142dp"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/profile_roundness"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="142dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="130dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="assets/fonts/HelveticaNeue.ttf"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false"
                android:text="Name"
                android:textSize="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginTop="130dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="assets/fonts/HelveticaNeue.ttf"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="false"
                android:text=" @username"
                android:textColor="@color/com_facebook_device_auth_text"
                android:textSize="10dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:fontFamily="assets/fonts/HelveticaNeue.ttf"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:text="Caption."
            android:textSize="9dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="143dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:fontFamily="assets/fonts/HelveticaNeue.ttf"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:text="num"
            android:textColor="@color/com_facebook_device_auth_text"
            android:textSize="10dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="410dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:fontFamily="assets/fonts/HelveticaNeue.ttf"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:text="num"
            android:textColor="@color/com_facebook_device_auth_text"
            android:textSize="10dp"
            android:layout_marginLeft="166dp"
            android:layout_marginTop="410dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:fontFamily="assets/fonts/HelveticaNeue.ttf"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:text="num"
            android:textColor="@color/com_facebook_device_auth_text"
            android:textSize="10dp"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="410dp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="329dp"
            android:layout_height="247dp"
            app:srcCompat="@drawable/post"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="172dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#0D47A1"
        android:onClick="share"
        android:paddingEnd="50dp"
        android:paddingStart="50dp"
        android:text="@string/share"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="481dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="53dp"
                android:layout_weight="1"
                android:background="#42A5F5"
                android:fontFamily="sans-serif-condensed"
                android:onClick="Gallery"
                android:paddingEnd="45dp"
                android:paddingStart="45dp"
                android:text="Choose Image"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="53dp"
                android:layout_weight="1"
                android:background="#42A5F5"
                android:fontFamily="sans-serif-condensed"
                android:onClick="Gallery"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="Choose Profile Picture"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>